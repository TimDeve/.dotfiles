// Place your settings in this file to overwrite the default settings
{
    "workbench.colorTheme": "Gruvbox Dark (Hard)",
    "editor.tabSize": 2,
    "editor.renderWhitespace": "boundary",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.fontFamily": "'Monoid-Regular', 'ProggySquareTT', monospace",
    "editor.fontSize": 12,
    "terminal.integrated.fontSize": 12,
    "window.zoomLevel": 0,
    "prettier.trailingComma": "es5",
    "prettier.semi": false,
    "prettier.printWidth": 110,
    "gitProjectManager.baseProjectsFolders": ["~/dev"],
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.searchHighlightColor": "#f9ab02",
    "vim.leader": "<space>",
    "vim.easymotionMarkerFontFamily": "'Monoid-Regular', 'ProggySquareTT', monospace",
    "vim.easymotionMarkerFontSize": "12",
    "vim.easymotionMarkerFontWeight": "normal",
    "vim.insertModeKeyBindings": [
        {
            "before": ["k", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before":["U"],
            "after":["<C-r>"]
        },
        {
            "before":["leader", "o"],
            "after":["o", "<Esc>"]
        },
        {
            "before":["leader", "O"],
            "after":["O", "<Esc>"]
        },
        {
            "before":["leader", "s", "c"],
            "after":[],
            "commands": [
                {
                    "command": ":nohl",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": ["<C-j>"],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.moveLinesDownAction",
                    "args": []
                }
            ]
        },
        {
            "before": ["<C-k>"],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.moveLinesUpAction",
                    "args": []
                }
            ]
        }
    ],
    "extensions.ignoreRecommendations": false
}